{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "checkJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "pretty": true,
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types",
            "types",
        ],
        "paths": {
            "*": [
                "types/*",
                "node_modules/@types/*",
            ],
            "@lib/*": ["./src/lib/*"],
        }
    },
    "include": ["**/*"],
    "exclude": [
        "node_modules/**",
        "mb_*.user.js",
        "dist/**",
        "lib/**",
        "coverage/**",
    ]
}
