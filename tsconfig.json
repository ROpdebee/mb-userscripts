{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "checkJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "pretty": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "types/*",
                "node_modules/@types/*",
            ]
        }
    },
    "include": ["**/*"],
    "exclude": [
        "node_modules/**",
        "mb_*.user.js",
        "dist/**",
        "lib/**"
    ]
}
